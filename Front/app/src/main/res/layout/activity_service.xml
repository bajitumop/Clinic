<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        tools:context=".views.ServiceActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/specialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/header_text_size"
                android:layout_marginBottom="@dimen/activity_half_vertical_margin"
                android:text="Специальность" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_text_size"
                android:text="Цена Р"/>

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:text="Наименование" />

        <TextView
            android:id="@+id/additionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/link_text_size"
            android:text="Дополнительная услуга" />

        <Button
            android:id="@+id/makeRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/textColorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:padding="@dimen/activity_half_horizontal_margin"
            android:text="@string/create_visit"/>

    </LinearLayout>
</ScrollView>