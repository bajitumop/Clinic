<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".views.MainFragments.ContactsFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/header_text_size"
            android:gravity="center_horizontal"
            android:text="@string/go_to_clinic" />

        <ImageView
            android:layout_height="300dp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/map"/>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Приемная: 37-43-35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Главврач: 37-43-36" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Проезд на общественном транспорте:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Автобусы: 1, 14, 45" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Троллейбусы: 7, 15, 28" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Маршрутное такси: 3, 4, 66" />

    </LinearLayout>
</ScrollView>