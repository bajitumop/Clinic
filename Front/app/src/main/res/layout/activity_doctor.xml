<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        tools:context=".views.DoctorActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="@dimen/activity_half_horizontal_margin"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_text_size"
                android:text="Фамилия Имя Отчество"/>

        </LinearLayout>

        <TextView
            android:id="@+id/specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_text_size"
            android:layout_marginBottom="@dimen/activity_half_vertical_margin"
            android:text="Специальность" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/link_text_size"
            android:text="Информация" />

        <Button
            android:id="@+id/makeRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/textColorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_half_vertical_margin"
            android:padding="@dimen/activity_half_horizontal_margin"
            android:text="@string/create_visit"/>

    </LinearLayout>

</ScrollView>