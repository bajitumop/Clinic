<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/activity_half_horizontal_margin"
    android:paddingEnd="@dimen/activity_half_horizontal_margin"
    android:paddingTop="@dimen/listMargin"
    android:paddingBottom="@dimen/listMargin">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/serviceDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/serviceName"
            android:layout_weight="1"
            android:textSize="@dimen/list_text_size"/>

</android.support.v7.widget.CardView>

</FrameLayout>