<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/activity_half_horizontal_margin"
    android:paddingEnd="@dimen/activity_half_horizontal_margin"
    android:paddingTop="@dimen/listMargin"
    android:paddingBottom="@dimen/listMargin">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_half_horizontal_margin"
            android:paddingEnd="@dimen/activity_half_horizontal_margin"
            android:paddingTop="@dimen/activity_half_vertical_margin"
            android:paddingBottom="@dimen/activity_half_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/serviceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Наименование услуги"
                android:textSize="@dimen/header_text_size"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата и время записи"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>